#:import resource_path botaplot.resources.resource_path
#:set default_font_size "8dp" # Using kivy method to set a default size



<ItemDrawer>:
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        text_color: root.text_color

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height
        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: resource_path("images", "aoer_logo_min.png")

    ScrollView:

        DrawerList:
            id: md_list


<SketchLayout>:
    do_rotation: False
    size: [4096, 4096]
    scale_min: 0.5
    scale_max: 2
    size: "400sp", "200sp"
    size_hint: None, None
    pos_hint: {"center_x": .5, "center_y": .5}




Screen:
    BoxLayout:
        orientation: 'vertical'
        MDNavigationLayout:
            id: nav_layout
            ScreenManager:
                id: screen_manager
                Screen:
                    id: main_screen
                    BoxLayout:
                        id: "main_boxlayout"
                        orientation: "vertical"
                        adaptive_height: True
                        MDToolbar:
                            # size_hint: 1,self.minimum_height
                            id: "main_toolbar"
                            name: "main_toolbar"
                            title: "Bot-Ã -Plot"
                            elevation: 10
                            left_action_items: [['menu', lambda x: nav_drawer.set_state("toggle")]]

                        MDTabs:
                            height: self.height
                            on_tab_switch: app.on_tab_switch(*args)
                            tab_indicator_type: "line"
                            tab_indicator_anim: True
                            allow_stretch: False
                            no_ripple_effect: False
                            ripple_duration: 2

                            Tab:
                                id: sketch_tab
                                text: "Sketch" 
                                BoxLayout:
                                    orientation: 'vertical'
                                    adaptive_height: True
                                    SketchLayout:
                                        id: sketch_layout

                                    MDBottomAppBar:
                                        MDToolbar:
                                            id: sketch_toolbar
                                            title: "Sketch"
                                            icon: "puzzle-plus"
                                            #type: "bottom"
                                            # mode: "free-end"
                                            on_action_button: app.on_action_pressed
#                                            on_press: lambda x: print("PRESSED")
                                            # type: "bottom"
                                            # right_action_items: [["file-code-outline", lambda x: x], ["drawing-box", lambda x:print(x)]]
                                            # left_action_items: [["file-code-outline", lambda x: print("SAVE SOMETHING")]]

                            Tab:
                            # TabbedPanelItem:
                                text: "Canvas"
                                Button:
                                    text: 'Layer output area'
                            Tab:
                            # TabbedPanelItem:
                                text: "Plotter" 
                                Button:
                                    text: 'GCode output'



            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    id: content_nav_drawer


